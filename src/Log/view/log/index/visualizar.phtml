function tratarObjeto($valor)
{
    if(is_object($valor)) {
        
        if($valor instanceof \Datetime) {
            return get_class($valor) . ' - ' . $valor->format('d/m/Y');
        } else {
            return get_class($valor) . ' - ' . $valor->getId();
        }
    }else {
        return $valor;   
    } 
}
